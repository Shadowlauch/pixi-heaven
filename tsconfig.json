{
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "outFile": "dist/pixi-heaven.js",
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "removeComments": true,
        "inlineSources": true,
        "declaration": true,
        "lib": ["es6", "dom"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist"
    ]
}
